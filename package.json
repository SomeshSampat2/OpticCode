{
  "name": "optic-code",
  "displayName": "Optic Code",
  "publisher": "SomeshSampat",
  "version": "1.0.2",
  "engines": { "vscode": "^1.75.0" },
  "activationEvents": [
    "onView:opticCode.chatView",
    "onCommand:opticCode.collectContext",
    "onCommand:opticCode.applyEdit",
    "onCommand:opticCode.openChat"
  ],
  "categories": ["Other"],
  "main": "./out/extension.js",
  "icon": "resources/opticCodeLogo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SomeshSampat2/OpticCode.git"
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "npm test"
  },
  "contributes": {
    "commands": [
      { "command": "opticCode.collectContext", "title": "Optic Code: Collect Context" },
      { "command": "opticCode.applyEdit", "title": "Optic Code: Apply AI Edit" },
      { "command": "opticCode.openChat", "title": "Optic Code: Open Chat" }
    ],
    "configuration": {
      "title": "Optic Code",
      "properties": {
        "opticCode.geminiApiKey": {
          "type": "string",
          "description": "Gemini API key for AI integration"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opticCodeChat",
          "title": "Optic Code Chat",
          "icon": "resources/chat.svg"
        }
      ]
    },
    "views": {
      "opticCodeChat": [
        {
          "id": "opticCode.chatView",
          "name": "Chat",
          "type": "tree"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "@types/mocha": "^8.2.0",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@google/genai": "^0.9.0",
    "undici": "^5.20.0"
  }
}
